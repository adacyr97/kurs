"""Zadanie2"""

promile=0

while promile<3:
    print('Lej kolejnego')
    promile+=0.4 
print("Osiagnales 3 promile dzis juz wystarczy")

kcal=0

while kcal<3500:
    print('Zjedz cos jeszcze')
    kcal+=500
print('Na dzis wystarczy')

"""Zadanie 3"""

stare_ceny=[20, 34, 19, 48, 29, 37]
nowe_ceny=[]
for i in stare_ceny:
    j=i*0.8
    nowe_ceny.append(j)
print(nowe_ceny)

srednica=[18, 20, 24, 30, 35, 40, 50, 60, 90]
powierzchnia=[]
for i in srednica:
    j=3.14*(i/2)**2
    powierzchnia.append(j)
print(powierzchnia)

